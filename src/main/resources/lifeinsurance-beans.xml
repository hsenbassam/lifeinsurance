<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans  
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
			http://www.springframework.org/schema/context  
	 	    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.lifeinsurance" />
	<context:annotation-config />


	<bean id="userService" class="com.lifeinsurance.service.UserServiceImpl" />
	<bean id="userDao" class="com.lifeinsurance.dao.UserDaoImpl" />
	
	<bean id="shoppingCartService" class="com.lifeinsurance.service.ShoppingCartServiceImpl" />
	<bean id="shoppingCartDao" class="com.lifeinsurance.dao.ShoppingCartDaoImpl" />
	
	<bean id="orderService" class="com.lifeinsurance.service.OrderServiceImpl" />
	<bean id="orderDao" class="com.lifeinsurance.dao.OrderDaoImpl" />

	<bean id="simulatorService" class="com.lifeinsurance.service.SimulatorServiceImpl" />

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="datasource" />
	</bean>
	<bean id="datasource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.postgresql.Driver" />
		<property name="url"
			value="jdbc:postgresql://localhost:5432/lifeinsurance" />
		<property name="username" value="postgres" />
		<property name="password" value="P@ssw0rd" />
	</bean>

	<bean id="authenticationProvider" class="com.lifeinsurance.security.JwtAuthenticationProvider" />
	<bean id="entryPoint" class="com.lifeinsurance.security.JwtAuthenticationEntryPoint" />
	<bean id="jwtGenerator" class="com.lifeinsurance.security.JwtGenerator" />
	
	<bean id="paypalClient" class="com.lifeinsurance.payment.PayPalClient" />
	


</beans>